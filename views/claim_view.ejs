<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
  <%- include('_layouts/head') %>
  <title>View Vendor Request | <%= title %></title>
  <link rel="stylesheet" type="text/css" href="/app-assets/css/pages/page-users.css">
</head>
<!-- END: Head-->

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">

  <%- include('_layouts/sidenavbar') %>

  <!-- BEGIN: Page Main-->
  <div id="main">
    <div class="row">
      <div id="breadcrumbs-wrapper" data-image="/app-assets/images/gallery/breadcrumb-bg.jpg">
        <!-- Search for small screen-->
        <div class="container">
          <div class="row">
            <div class="col s12 m6 l6">
              <h5 class="breadcrumbs-title mt-0 mb-0"><a class="mr-2" href="/claim"><i class="material-icons">arrow_back</i></a><span>View Vendor Request</span></h5>
            </div>
            <div class="col s12 m6 l6 right-align-md">
              <ol class="breadcrumbs mb-0">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/claim">Vendor Requests</a></li>
                <li class="breadcrumb-item active">View Vendor Request</li>
              </ol>
            </div>
          </div>
        </div>
      </div>
      <div class="col s12">
        <div class="container">
          <!-- users view start -->
          <div class="section section-data-tables users-view">
            <%- messages('messages', locals) %>
            <!-- users view media object start -->
            <div class="card-panel">
              <div class="row">
                <div class="col s12 m7">
                  <div class="display-flex media">
                    <img src="<%= request.vendor.photo %>" alt="users view avatar" class="z-depth-2 circle mr-3" height="64" width="64" onerror="this.onerror=null; this.src='/uploads/default_user.jpg';">
                    <div class="media-body">
                      <h6 class="media-heading">
                        <span class="users-view-name"><%= request.vendor.name %></span>
                      </h6>
                      <span>Email:</span>
                      <span class="users-view-id"><%= request.vendor.email %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- users view media object ends -->

            <!-- users view card details start -->
            <div class="card">
              <div class="card-content">
                <div class="row">
                  <div class="col s12">
                    <table class="striped">
                      <tbody>
                        <tr>
                          <th style="width: 200px;">Name</th>
                          <td><%= request.vendor.name %></td>
                        </tr>
                        <tr>
                          <th style="width: 200px;">Email</th>
                          <td><%= request.vendor.email %></td>
                        </tr>
                        <tr>
                          <th>Event Name</th>
                          <td><%= request.event.name %></td>
                        </tr>
                        <tr>
                          <th>Event Code</th>
                          <td><%= request.event.eventCode %></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
                <div class="row">
                  <a onclick="history.back()" class="btn btn-danger mt-2" style="margin-left: 15px;">Back</a>
                </div>
              </div>
            </div>
          </div>
          <!-- users view ends -->
        </div>
      </div>
    </div>
  </div>
  <!-- END: Page Main-->

  <%- include('_layouts/commonJs')  %>
</body>

</html>